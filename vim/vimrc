execute pathogen#infect()
execute pathogen#helptags()

filetype plugin indent on
syntax on

colorscheme slate
set number              " display line numbers
set cursorline          " highlight the current line
" set hls                 " set highlight search on

set shiftwidth=4        " operation >> indents 4 columns; << unindents 4 columns
set tabstop=4           " a hard TAB displays as 4 columns
set expandtab           " insert spaces then hitting TABs
set softtabstop=4       " insert/delete 4 spaces when hitting TAB/BACKSPACE
set shiftround          " round indent to multiple of 'shiftwidth'
set autoindent          " align the new line indent with the previous line

set wildmode=longest,list,full      " sensible tab-completion behavior
set wildmenu                        " extend tab-completion with interactive menu

set nocompatible

" Keep cursor 4 lines away form window edges
set scrolloff=4

" Remove trailing whitespaces when writing a buffer to file
autocmd BufWritePre * :%s/\s\+$//ge

" Use Markdown syntax highlighting for .md-files
autocmd BufNewFile,BufRead *.md set syntax=markdown

set directory=~/.vim/swap

" Remap leader to comma
let mapleader = ","

" Reselect visual blocks after indent/outdent
vnoremap < <gv
vnoremap > >gv

" Easy split navigation
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

" Improve up/down movement on wrapped lines
nnoremap j gj
nnoremap k gk

" A more handy Esc
inoremap kj <Esc>

" Jumpt to start and end of line using home row keys
noremap H ^
noremap L $

" Cycle through tabs like in firefox
map <C-n> :tabn<CR>
map <C-p> :tabp<CR>

" NERDTree ====================================================================

nnoremap <leader>t :NERDTree<CR>

" PythonMode ==================================================================

let g:pymode_rope_complete_on_dot = 0
let g:pymode_rope = 0
let g:pymode_options_max_line_length = 79
let g:pymode_options_colorcolumn = 0
